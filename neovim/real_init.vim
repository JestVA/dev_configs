set number							" show line numbers
set guicursor=n-v-c-i:block			" set cursor to thick block in all modes (including insert mode)
syntax on
set hlsearch						" highlight search results
set ignorecase						" case agnostic search
set incsearch						" incremental search results
set noswapfile						" disable swap file
inoremap jj <ESC>					" remap ESC to jj
